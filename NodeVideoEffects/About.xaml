<Window x:Class="NodeVideoEffects.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeVideoEffects"
        mc:Ignorable="d"
        Title="{x:Static local:Translate.About}" Height="200" Width="300" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" BorderThickness="1"
        WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Label FontSize="15" Content="NodeVideoEffects" Grid.Row="0"/>
        <Label Name="git" Content="" UseLayoutRounding="False" Grid.Row="1"/>
        <Button Content="{x:Static local:Translate.Close}" Click="Close" Grid.Row="3" HorizontalAlignment="Right" Width="70" Height="30" VerticalAlignment="Center"/>
    </Grid>
</Window>
