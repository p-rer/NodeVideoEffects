<UserControl x:Class="NodeVideoEffects.LogItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NodeVideoEffects"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800" Margin="1">
    <Border x:Name="border" CornerRadius="4" BorderThickness="1" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label x:Name="time" Grid.Column="1" Foreground="White" HorizontalContentAlignment="Center"/>
            <Label x:Name="loglevel" Grid.Column="2" Foreground="White" HorizontalContentAlignment="Center"/>
            <Label x:Name="message" Grid.Column="3" Foreground="White" HorizontalContentAlignment="Left"/>
        </Grid>
    </Border>
</UserControl>
