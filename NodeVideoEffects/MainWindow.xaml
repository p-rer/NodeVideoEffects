<Window xmlns:nodeVideoEffects.Editor="clr-namespace:NodeVideoEffects.Editor;assembly=NodeVideoEffects.Editor"
        x:Class="NodeVideoEffects.NodeEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:utility="clr-namespace:NodeVideoEffects.Utility;assembly=NodeVideoEffects.Utility"
        xmlns:local="clr-namespace:NodeVideoEffects"
        mc:Ignorable="d"
        Title="{x:Static utility:Text_UI.Editor}" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="30" MaxWidth="300" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <MenuItem Header="{x:Static utility:Text_UI.File}">
                <MenuItem Header="{x:Static utility:Text_UI.Close}" Click="Close" />
            </MenuItem>
            <MenuItem Header="{x:Static utility:Text_UI.Edit}" IsEnabled="False">
                <MenuItem Header="{x:Static utility:Text_UI.Copy}" />
            </MenuItem>
            <MenuItem Header="{x:Static utility:Text_UI.View}">
                <MenuItem Header="{x:Static utility:Text_UI.ResetView}" Click="ResetView" />
                <MenuItem Header="Open log..." Click="OpenLogViewer" />
                <MenuItem Header="Delete all log" Click="LogsDelete" />
            </MenuItem>
            <MenuItem Header="{x:Static utility:Text_UI.Help}">
                <MenuItem Header="{x:Static utility:Text_UI.CheckUpdate}" Click="CheckUpdate" />
                <MenuItem Header="{x:Static utility:Text_UI.ShowAbout}" Click="ShowAbout" />
            </MenuItem>
        </Menu>
        <local:DockablePanelField Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1">
            <local:DockablePanel Title="Explorer" DockLocation="Left" Priority="0">
                <ContentControl x:Name="Explorer" />
            </local:DockablePanel>
            <local:DockablePanel Title="Editor" DockLocation="Center" Priority="1">
                <nodeVideoEffects.Editor:Editor Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                                x:Name="EditSpace"
                                                NodesUpdated="EditSpace_NodesUpdated" />
            </local:DockablePanel>
        </local:DockablePanelField>
    </Grid>
</Window>