<Window xmlns:NodeVideoEffects="clr-namespace:NodeVideoEffects;assembly=NodeVideoEffects.Control"  x:Class="NodeVideoEffects.NodeEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeVideoEffects"
        mc:Ignorable="d"
        Title="Editor" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="Import..." />
                <MenuItem Header="Export..." />
                <Separator />
                <MenuItem Header="Close" />
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Copy" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Reset view" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Open help site..." />
                <MenuItem Header="Check for update..." />
                <MenuItem Header="About..." />
            </MenuItem>
        </Menu>
        <Rectangle Grid.Column="1" Grid.Row="1" Fill="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" Width="1" />
        <NodeVideoEffects:Editor Grid.Column="2"  Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" x:Name="EditSpace"/>
    </Grid>
</Window>
