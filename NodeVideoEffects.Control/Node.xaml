<UserControl x:Class="NodeVideoEffects.Control.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NodeVideoEffects.Control"
             mc:Ignorable="d"
             MinHeight="25" Width="250"
             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
             BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
             BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Name="nodeName" Grid.Row="0" BorderThickness="0,0,0,1" >
            <Label.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}" />
            </Label.BorderBrush>
        </Label>
        <Ellipse Name="categorySign" Grid.Row="0" Height="15" Width="14" Margin="0,5,5,5" HorizontalAlignment="Right" />
        <StackPanel Name="portsPanel" Grid.Row="2" VerticalAlignment="Top" />
    </Grid>
</UserControl>
