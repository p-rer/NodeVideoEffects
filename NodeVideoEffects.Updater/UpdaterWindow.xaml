<Window x:Class="NodeVideoEffects.Updater.UpdaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeVideoEffects.Updater"
        mc:Ignorable="d"
        Title="" ShowInTaskbar="False" Height="65" Width="400" WindowStyle="None" ResizeMode="NoResize"
        Closing="UpdaterWindow_OnClosing"
        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
    <Window.DataContext>
        <local:UpdateViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Height="35" VerticalContentAlignment="Center" Content="{Binding Status, Mode=OneWay}"
               HorizontalAlignment="Left" FontSize="20" />
        <TextBlock Grid.Row="1" Padding="5 0 0 0" Height="26" HorizontalAlignment="Left" FontSize="12"
                   Visibility="{Binding ProgressVisible, Mode=OneWay}">
            <Run Text="{Binding DownloadProgress, Mode=OneWay, StringFormat=N1}" /><Run Text="%" />
        </TextBlock>
        <ProgressBar Grid.Row="2" Background="Transparent" BorderThickness="0"
                     Value="{Binding DownloadProgress, Mode=OneWay}"
                     Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Height="4"
                     IsIndeterminate="{Binding IsIndeterminate, Mode=OneWay}" />
    </Grid>
</Window>